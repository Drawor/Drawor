@model Drawor.Financeiro.Models.Conta
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">Cadastro de Despesas</h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="active">Cadastro de Despesas</li>
            </ol>
        </div>
    </div><!-- /.row -->
</div>

    @Html.ValidationSummary(true)
    <fieldset>

        <form class="form">

            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-default">
                        <div class="panel-heading"><h4>Conta</h4></div>
                        <div class="panel-body">

                            <div class="form-group">
                                <div class="editor-label col-md-4">
                                    <label for="OriginZip" class="required">Nome</label>
                                </div>
                                <div class="editor-field col-md-8">
                                    @(Html.Kendo().TextBoxFor(m => m.Nome).Name("Nome").HtmlAttributes(new { required = "required", style = "width:200px" }))
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="editor-label col-md-4">
                                    <label for="OriginZip" class="required">Saldo Atual</label>
                                </div>
                                <div class="editor-field col-md-8">
                                    @(Html.Kendo().NumericTextBoxFor(m => m.SaldoAtual).Name("Saldo").HtmlAttributes(new { required = "required", style = "width:200px", format = "c" }))
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div>
                @(Html.Kendo().Button()
                                           .Name("CriarConta")
                                           .Content("Criar Conta")
                                           .HtmlAttributes(new { type = "button" })
                                           .Events(ev => ev.Click("CriarConta")))
            </div>


            @*<div class="modal-header" align="right">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Close</button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>*@

        </form>
    </fieldset>


<script>

    function CriarConta()
    {
        var url = '@Url.Action("NovaConta", "Financas")';

        var dto = {
            Nome: $("#Nome").val(),
            SaldoAtual: $("#SaldoAtual").val()
        }

            $.ajax({
                type: 'POST',
                url: url,
                data: dto,
                success: function (data) {

                    swal("Good!", "Criado!", "success")
                }
                ,

                async: true
            });


    }

</script>

