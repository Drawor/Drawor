@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
       <div class="demo-section k-content wide">
            @(Html.Kendo().Chart()
        .Name("chart")
        .Title("Despesas")
        .Legend(legend => legend
            .Position(ChartLegendPosition.Top)
        )
        .ChartArea(chartArea => chartArea
            .Background("transparent")
        )
        .Series(series =>
        {
            series.Column(new double[] { 390.70}).Name("Alimentação");
            series.Column(new double[] { 474.30 }).Name("Vivo Model");
            series.Column(new double[] { 10.00 }).Name("Vivo Fixo");
            series.Column(new double[] { 198.08}).Name("Gasolina");
    })
        .CategoryAxis(axis => axis
            .Name("series-axis")
            .Line(line => line.Visible(true))
        )
        .CategoryAxis(axis => axis
            .Name("label-axis")
            .Categories("Alimentação","Gasolina","Vivo Movel","Vivo Fixo")
        )
        .ValueAxis(axis => axis
            .Numeric()
                .Labels(labels => labels.Format("R${0}"))

                // Move the label-axis all the way down the value axis
                .AxisCrossingValue(0, int.MinValue)
        )
        .Tooltip(tooltip => tooltip
            .Visible(true)
            .Format("{0}%")
            .Template("#= series.name #: #= value #")
        )
            )
        </div>

    </div>
    <div class="col-md-4">
        <div class="demo-section k-content wide">
            @(Html.Kendo().Chart()
        .Name("chartReceitas")
        .Title("Receitas")
        .Legend(legend => legend
            .Position(ChartLegendPosition.Top)
        )
        .ChartArea(chartArea => chartArea
            .Background("transparent")
        )
        .Series(series =>
        {
            series.Column(new double[] {0 }).Name("");
            series.Column(new double[] { 0 }).Name("");
            series.Column(new double[] { 0 }).Name("");
            series.Column(new double[] { 0}).Name("");
        })
        .CategoryAxis(axis => axis
            .Name("series-axis")
            .Line(line => line.Visible(true))
        )
        .CategoryAxis(axis => axis
            .Name("label-axis")
            .Categories("Alimentação", "Gasolina", "Vivo Movel", "Vivo Fixo")
        )
        .ValueAxis(axis => axis
            .Numeric()
                .Labels(labels => labels.Format("R${0}"))

                // Move the label-axis all the way down the value axis
                .AxisCrossingValue(0, int.MinValue)
        )
        .Tooltip(tooltip => tooltip
            .Visible(true)
            .Format("{0}%")
            .Template("#= series    .name #: #= value #")
        )
            )
        </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>

<div class="demo-section k-content">
    <h4>Remind me on</h4>
    @(Html.Kendo().DateTimePicker()
        .Name("datetimepicker")
        .Value(DateTime.Now)
        .HtmlAttributes(new { style = "width:100%;" })
